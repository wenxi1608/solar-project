<%- include('../partials/header'); -%>

  <h1><%= foundProduct.name %></h1>

  <div class="container-fluid">

    <img src="<%= foundProduct.img %>" class="img-fluid">
    <h3><%= foundProduct.caption %></h3>
    <h5><%= foundProduct.bodyType %></h5>
    <div class="price">Price Per Person: from $<%= foundProduct.price %></div>
    <div class="highlights">Highlights
      <% foundProduct.highlights.forEach(item => { %></div>
        <ul>
          <li><%= item %></li>
        </ul>
      <% }) %>
    <div class="discoveredBy">Discovered By:<%= discoveredBy %></div>
    <div class="discoveryDate">Discovery Date:<%= discoveryDate %></div>

    <form method="POST" action="/destinations/<%= foundProduct.name %>">
      <div class="mb-3">
        <label for="form-date" class="form-label"><i class="fa-solid fa-calendar-days"></i>Select a date</label>
        <p>All packages are fixed dated unless otherwise stated.</p>
        <input type="date" class="form-control" id="date" name="date">
      <div class="mb-3">
        <label for="form-qty" class="form-label"><i class="fa-solid fa-people-group"></i>Select no. of participants</label>
        <input type="number" class="form-control" id="qty" name="qty" min="1" max="5">
      </div>
      <div class="col-12">
        <button class="btn btn-primary" type="submit">Add to cart</button>
      </div>
    </form>

    </div>

<%- include('../partials/footer'); -%>