<%- include('../partials/header'); -%>

  <div class="container" id="profilepage">
    <h1><i class="fa-regular fa-address-card"></i>Profile</h1>
    <div class="mb-3 row">
      <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
      <div class="col-sm-10">
        <input type="text" readonly class="form-control-plaintext" value="<%= authUser.email %>">
      </div>
    </div>
    <div class="mb-3 row">
      <label for="staticEmail" class="col-sm-2 col-form-label">First name</label>
      <div class="col-sm-10">
        <input type="text" readonly class="form-control-plaintext" value="<%= authUser.firstname %>">
      </div>
    </div>
    <div class="mb-3 row">
      <label for="staticEmail" class="col-sm-2 col-form-label">Last name</label>
      <div class="col-sm-10">
        <input type="text" readonly class="form-control-plaintext" value="<%= authUser.lastname %>">
      </div>
    </div>

    <div>
      <button class="btn btn-primary"><a href="/profile/edit">Edit profile</a></button>
    </div>
    
  </div>

<%- include('../partials/footer'); -%>