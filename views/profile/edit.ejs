<%- include('../partials/header'); -%>

  <div class="container" id="profilepage">
    <h1><i class="fa-regular fa-address-card"></i>Edit Profile</h1>

    <form method="POST" action="/profile?_method=PATCH">
      <div class="mb-3 row">
        <label for="email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="email" id="email" value="<%= authUser.email %>">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="firstname" class="col-sm-2 col-form-label">First name</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="firstname" id="firstname" value="<%= authUser.firstname %>">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="lastname" class="col-sm-2 col-form-label">Last name</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="lastname" id="lastname" value="<%= authUser.lastname %>">
        </div>
      </div>
  
      <div>
        <button class="btn btn-primary" type="submit">Save changes</button>
      </div>
    </form>
    
  </div>

<%- include('../partials/footer'); -%>